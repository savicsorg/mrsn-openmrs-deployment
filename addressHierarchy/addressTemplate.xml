<org.openmrs.layout.address.AddressTemplate>
    <nameMappings class="properties">
        <property name="country" value="Pays" />
        <property name="stateProvince" value="Région"/>
        <property name="countyDistrict" value="Département" />
        <property name="cityVillage" value="Commune" />
        <property name="address1" value="Ville/Village" />
        <property name="address2" value="Autre adresse" />
    </nameMappings>

    <sizeMappings class="properties">
        <property name="country" value="40" />
        <property name="stateProvince" value="40"/>
        <property name="countyDistrict" value="40"/>
        <property name="cityVillage" value="40"/>
        <property name="address1" value="40"/>
        <property name="address2" value="40"/>
    </sizeMappings>

    <elementDefaults class="properties">
        <property name="country" value="Niger" />
    </elementDefaults>

    <lineByLineFormat>
        <string>country</string>
        <string>stateProvince</string>
        <string>countyDistrict</string>
        <string>cityVillage</string>
        <string>address1</string>
        <string>address2</string>
    </lineByLineFormat>

    <requiredElements>
        <string>country</string>
    </requiredElements>
</org.openmrs.layout.address.AddressTemplate>
