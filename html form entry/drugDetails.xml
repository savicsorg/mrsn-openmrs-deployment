<htmlform formUuid="a000cb34-9ec1-4344-a1c8-f692232f6edd" formName="DrugDetails" formEncounterType="67a71486-1a54-468f-ac3e-7091a9a79584" formVersion="1.0">
    <macros>
        paperFormId = (Fill this in)
        headerColor =#009d8e
		secondFeaderColor =yellow
		fontOnHeaderColor = white
    </macros>

    <style>
		form select,
		.form select {
			min-width: 80px;
		}

        input#w8-display {
            width: 97%;
        }
        #drug{
            width: 100%;
        }


		.section {
			border: 1px solid $headerColor;
			padding: 2px;
			text-align: left;
			margin-bottom: 1em;
		}

		.sectionHeader {
			background-color: $headerColor;
			color: $fontOnHeaderColor;
			display: block;
			padding: 2px;
			font-weight: bold;
		}

		.sectionSecondHeader {
			background-color: $secondFeaderColor;
			color: $fontOnHeaderColor;
			display: block;
			padding: 2px;
			font-weight: bold;
		}

		table.baseline-aligned td {
			vertical-align: baseline;
		}



		table.baseline-aligned-borded td {
			vertical-align: baseline;
			border: 1px solid black;
		}
	</style>

    <ifMode mode="ENTER">
        <script type="text/javascript">
        </script>
    </ifMode>

    <ifMode mode="EDIT">
        <script type="text/javascript"></script>
    </ifMode>

    <ifMode mode="VIEW">
        <script type="text/javascript"></script>
    </ifMode>


    <div class="hidden" id="encounter-details" sectionTag="section" headerStyle="title" headerLabel="Encounter Details">
        <fieldset>
            <legend>When?</legend>
            <label>When?</label>
            <encounterDate default="now" showTime="false" />
        </fieldset>

        <fieldset>
            <legend>Who?</legend>
            <label>Who?</label>

            <encounterProviderAndRole default="currentUser" encounterRole="240b26f9-dd88-4172-823d-4a8bfeb7841f" required="true" />
        </fieldset>

        <fieldset>
            <legend>Where?</legend>
            <label>Where?</label>

            <encounterLocation default="SessionAttribute:emrContext.sessionLocationId" />
        </fieldset>
    </div>

    <section headerLabel="Prescription de médicament">
        <table class="baseline-aligned" border="1" width="100%">
            <tr>
                <td>
                    Médicament
                </td>
                <td>
                    <obs conceptId="5106" id="drug" answerDrugs="true" displayTemplate="{{name}} {{concept}}" />
                </td>
            </tr>
        </table>

        <table class="baseline-aligned" border="1" width="100%">
            <tr>
                <td>
                    Voie d'administration
                </td>
                <td>
                    <obs conceptId="2441" />
                </td>
            </tr>
            <tr>
                <td>
                    Quantité par dose
                </td>
                <td>
                    <obs conceptId="462" />
                    <obs conceptId="2488" tags="Unités de dose" />
                </td>
            </tr>
            <tr>
                <td>
                    Fréquence
                </td>
                <td>
                    <obs conceptId="460" tags="Choisir la fréquence d'utilisation" />
                </td>
            </tr>

            <tr>
                <td>
                   Durée
                </td>
                <td>
                    <obs conceptId="404" />
                    <obs conceptId="285" tags="Choisir la durée d'utilisation" />
                </td>
            </tr>
        </table>


        <section headerLabel="Indications">
            <table class="baseline-aligned" border="1" width="100%">
                <tr>
                    <td colspan="2">
                        <obs conceptId="652" tags="Observations" style="textarea" rows="5" cols="105" />
                    </td>
                </tr>
            </table>
        </section>
    </section>

    <submit />
</htmlform>